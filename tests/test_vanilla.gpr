with "config/test_substitute_config.gpr";

project Test_Vanilla
is
   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Test_Substitute_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("test_vanilla.adb");

   package Compiler is
      for Default_Switches ("Ada") use Test_Substitute_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Test_Vanilla;
